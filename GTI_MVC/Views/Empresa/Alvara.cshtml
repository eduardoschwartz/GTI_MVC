@model GTI_Mvc.ViewModels.AlvaraViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alvará de Funcionamento";
}

<style>
    .textBoxBlue {
        height: 25px;
        position: relative;
        border: 1px solid #0094ff;
        border-color: rgba(0, 0, 0, .14);
        background-color: white;
        font-size: 14px;
        box-shadow: 0 1px 1px 0 rgba(0,0,0,0.24),0 1px 6px 0 rgba(0,0,0,0.19);
    }

    .center {
        margin: auto;
    }

    .actionlink:hover {
        color: darkgreen;
    }

    .actionlink {
        color: darkslateblue;
    }
    .card-header {
        background-color: mistyrose;
        color: brown;
        font-size: 14px
    }

    .card {
        font-family: Arial, Helvetica, sans-serif;
    }

    .card-footer {
        background-color: whitesmoke;
        font-size: 14px
    }

    .btn-primary {
        background-color: steelblue;
    }

    .btn {
        font-size: 14px;
        border-radius: 4px;
    }

    .errorlabel {
        font-weight: normal;
        color: red;
        padding-left: 13px;
        font-size: 13px;
        font-family: Arial, Helvetica, sans-serif;
    }
</style>

<div class="center container" style="width:450px">
    @using (Html.BeginForm("Alvara", "Empresa", FormMethod.Post, new { @id = "MainForm" })) {
        <div class="card">
            <div class="card-header">Renovação de alvará de funcionamento</div>
            <div class="card-body">

                <table width="500px">
                    <tr>
                        <td style="width:150px">Inscrição Municipal:</td>
                        <td style="width:300px">@Html.TextBoxFor(m => m.Codigo, new { @id = "codigo", @class = "textBoxBlue", @style = "max-width:100px", @onKeyPress = "return formata(this, '§§§§§§', event)", @onchange = "ClearError()" })</td>
                    </tr>

                </table>
                <br />
                <button type="submit" class="btn btn-primary"> Imprimir</button>
            </div>
            <label id="errorLabel" class="errorlabel"> @ViewBag.ErrorMessage</label>
            <div class="card-footer">
                @Html.ActionLink("Retornar ao menu principal", "Login_gti", "Home", null, new { @class = "actionlink" })
            </div>
        </div>
    }
</div>

@section scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $("#MainForm").submit(function () {
                return ValidateForm();
            });
        });

        function ValidateForm() {
            document.getElementById('errorLabel').innerHTML = "";
 
            var _codigo = document.getElementById('codigo').value;

            if (_codigo == "" || parseInt(_codigo) == 0) {
                document.getElementById('errorLabel').innerHTML = "Digite a inscrição da empresa.";
                return false;
            }

            return true;
        }

        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }

    </script>
}

