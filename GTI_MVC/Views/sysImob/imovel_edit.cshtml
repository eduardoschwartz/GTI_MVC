            });

            Init();

            var _res = '@res';
            if (_res != "") {
                $('#msgBoxBag').dialog('open');
                return false;
            } else {
                return true;
            }
        });

        function Init() {
            Carrega_Prop();

            var _tipoend = '@tipoend';
            if (_tipoend == '0') {
                $("#endImOpt").prop("checked", true);
            }
            else {
                if (_tipoend == '1') {
                    $("#endPrOpt").prop("checked", true);
                }
                else {
                    $("#endEnOpt").prop("checked", true);
                }
            }

            var _imune = '@imune';
            if (_imune == 'True')
                $("#imuneSimOpt").prop("checked", true);
            else
                $("#imuneNaoOpt").prop("checked", true);

            var _cip = '@cip';
            if (_cip == 'True')
                $("#cipSimOpt").prop("checked", true);
            else
                $("#cipNaoOpt").prop("checked", true);


            var _conjugado = '@conjugado';
            if (_conjugado == 'True')
                $("#cjSimOpt").prop("checked", true);
            else
                $("#cjNaoOpt").prop("checked", true);


            var _reside = '@reside';
            if (_reside == 'True')
                $("#resideSimOpt").prop("checked", true);
            else
                $("#resideNaoOpt").prop("checked", true);

        }

        function Fechar() {
            var _cod = '@cod';
            window.location.href = "localhost" ? "/sysImob/imovel_data?cod=" + _cod : "/gti/sysImob/imovel_data?cod=" + _cod;
        }

        function Gravar() {
            //To do
        }

        //####### Proprietário #######
        function Carrega_Prop() {
            var _guid = '@guid';
            $("#propTable tbody tr").remove();
            var i = 0;
            var url = '@Url.Action("Lista_WImovel_Prop", "sysImob")';
            $.getJSON(url, { guid: _guid }, function (data) {
                $.each(data, function () {
                    var tr;
                    tr = $('<tr id="' + data[i].Codigo + '" style="height: 12px; font-weight: normal; font-size: 12px; white-space: nowrap; cursor: pointer"  />');
                    tr.append("<td style='width:60px;text-align:center'>" + data[i].Codigo + "</td>");
                    tr.append("<td style='width:330px'>" + data[i].Nome + "</td>");
                    tr.append("<td style='width:80px'>" + data[i].Tipo + "</td>");
                    if (data[i].Principal==true)
                        tr.append("<td style='width:50px;text-align:center'>" + "Sim" + "</td>");
                    else
                        tr.append("<td style='width:50px;text-align:center'>" + "Não" + "</td>");
                    $("#propTable").find('tbody').append(tr);
                    i++;
                });
            });
        }

        $("#propTable").on('click', 'tr', function (e) {
            $('#propTable tr').removeClass('highlighted');
            $(this).addClass('highlighted');
            document.getElementById('codTmp').value = $(this).closest('tr').find('td:eq(0)').text();
        });

        function Prop_Add() {
            var _cod = '@cod';
             alert(_cod);
        }

        function Prop_Edit() {
            var _cod = document.getElementById('codTmp').value;
            if (_cod == "" || parseInt(_cod) == 0) {
                document.getElementById('lblMsg').innerHTML = "Selecione um proprietário!";
                $('#msgBox1').dialog('open');
            } else {
                alert(_cod);
            }
        }

        function Prop_Delete() {
            var _cod = document.getElementById('codTmp').value;
            if (_cod == "" || parseInt(_cod) == 0) {
                document.getElementById('lblMsg').innerHTML = "Selecione um proprietário!";
                $('#msgBox1').dialog('open');
            } else {
                alert(_cod);
            }
        }

