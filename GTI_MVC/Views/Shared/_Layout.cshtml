
<html style="background-image: url('http://sistemas.jaboticabal.sp.gov.br/gti/Images/bege.jpg')">
<head >
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/gti.js"></script>
    <link href="~/Content/gti.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>

    <style>
        .center {
            margin: auto;
            width: 80%;
            /*border: 3px solid #73ad21;*/
            padding: 10px;
        }
        body:lang(en) {
            margin-top: 1em;
        }


        body {
            padding: 0 10px;
            margin: 1em 8% 1em 8%;
            margin-top: 2em;
            position: relative;
            box-shadow: 0 .3em 1em #000;
            border-radius: 13px;
        }


    </style>

</head>
    <body >
        <header   style="background-color:white" >
            <div style="display:block;text-align:center;padding-top:10px">
                <img src="~/Images/titulo.png" />
                <img src="~/Images/Separator.png" />
            </div>
        </header>
        


        <div class="center" style="background-color:white">
            @RenderBody()
        </div>
        @RenderSection("scripts", required: false)
        <br />
        
        <div style="background-color:white;display:block;text-align:center;padding-top:10px">
            <div><img src="~/Images/Separator.png" /></div>
            <div style="  font-family: Arial, Helvetica, sans-serif;font-size: 12px;font-weight: bold;">&copy;2003-2020 - Gestão Tributária Integrada (G.T.I.)</div>
            <div style="  font-family: Arial, Helvetica, sans-serif;font-size: 11px;font-weight: bold;color:darkgreen">
                Logado como @Functions.pUserFullName
                @if (Functions.pUserId > 0) {
                    @Html.ActionLink("Sair do sistema", "Logout", "Home");
                }
            </div>
        </div>



    </body>
</html>
