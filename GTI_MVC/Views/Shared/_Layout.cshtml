
<html style="background-image: url('http://sistemas.jaboticabal.sp.gov.br/gti/Images/bege.jpg')">
@*<html>*@
<head>

    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/gti.js"></script>
    @*<link href="~/Content/gti.css" rel="stylesheet" />*@
    <title>@ViewBag.Title</title>

    <style>
        .center {
            margin: auto;
            /*width: 80%;*/
            /*border: 3px solid #73ad21;*/
            /*padding: 10px;*/
        }

        body:lang(en) {
            margin-top: 1em;
        }


        body {
            /*position: absolute;
                top: 50%;
                left: 50%;
                margin-right: -50%;
                transform: translate(-50%, -50%)
                padding: 0 10px;*/
            margin: 1em 8% 1em 8%;
            margin-top: 2em;
            min-width: 1000px;
            position: relative;
            box-shadow: 0 .3em 1em #000;
            border-radius: 13px;
        }

        /*header {
                background-color: brown;
                padding: 0 10px;
                margin-top: 2em;
                margin: 1em 8% 1em 8%;
                position: relative;
                border-radius: 13px;
            }*/
        #header {
            position: relative;
            z-index: 9;
            height: 80px;
            top: 0;
            left: 0;
            right: 0;
            text-align: center;
            display: block;
            border-radius: 13px 13px 0px 0px;
            background: brown;
            display: flex;
            justify-content: center;
        }

        #footer {
            position: fixed;
            height: 30px;
            bottom: 0;
            left: 0;
            right: 0;
            text-align: center;
            display: block;
            background: black;
            padding-top: 5px;
            /*border-radius: 0px 0px 13px 13px;*/
        }

        #divElement {
            position: absolute;
            top: 50%;
            left: 50%;
            margin-right: -50%;
            transform: translate(-50%, -50%)
        }

        .titulo2 {
            width: 700px;
            /*display: block;
                text-align: center;*/
        }

        .container2 {
            width: 300px;
            display: block;
            text-align: center;
        }

        #container {
            margin: 0 auto;
            overflow: auto;
            padding: 80px 0;
            width: 940px;
        }

        #content {
        }

        .one {
            position: fixed;
            width: 100px;
            float: left;
        }

        .two {
            padding-top: 10px;
            margin-left: 15%;
        }

        .footer {
            background: red;
            position: relative;
            left: 0;
            right: 0;
            bottom: 0;
            height: 50px;
        }

        #table {
            align-self: center;
        }
    </style>

</head>
<body>

    <div id="header" style="text-align:center">
        <table id="table">
            <tr>
                <td>
                    <img src="~/Images/brasaocor.png" style="height:100px;width:90px;padding-top:10px" />
                </td>
                <td style="text-align:center">
                    <span style="font-family: Arial, Helvetica, sans-serif;font-size: 24px;font-weight: normal;color:white">Prefeitura Municipal de Jaboticabal</span>
                    <br /><span style="font-family: Arial, Helvetica, sans-serif;font-size: 16px;font-weight: normal;color:white">Serviços disponíveis</span>
                </td>
            </tr>
        </table>
    </div>


    <br />
    <div id="container" style="background-color: white">
        <div id="content">
            @RenderBody()
        </div>
    </div>
    <br />
    @RenderSection("scripts", required: false)
    <br />


    <div id="footer">
        <span style="font-family: Arial, Helvetica, sans-serif;font-size: 12px;font-weight: bold;color:white">&copy;2003-2020 - Gestão Tributária Integrada (G.T.I.)</span>
        <span style="font-family: Arial, Helvetica, sans-serif;font-size: 11px;font-weight: bold;color:moccasin">
            &nbsp;-&nbsp;Logado como @Functions.pUserFullName
            @if (Functions.pUserId > 0) {
                @Html.ActionLink("Sair do sistema", "Logout", "Home");
            }
        </span>
    </div>

</body>



</html>


