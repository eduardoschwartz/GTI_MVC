
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/gti.js"></script>
    <link href="~/Content/gti.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>


</head>
<body>
    <header>
        <div class="container2" style="margin-bottom: 0px;">
            <table>
                <tr>
                    <td>
                        <div>
                            <a href="http://www.jaboticabal.sp.gov.br">
                                <img src="~/Images/brasaocor.png" class='iconDetails' />
                            </a>
                        </div>

                    </td>
                    <td>
                        <span style="font-size: 14px; font-weight: bold;">

                        </span>
                        <br />
                        <span style="font-family: 'Times New Roman', 'Arial', 'Helvetica', 'sans-serif';font-size: 22px;font-weight: bold;">&nbsp;&nbsp; Prefeitura Municipal de Jaboticabal</span><br />
                        <span style="font-family: 'Times New Roman', 'Arial', 'Helvetica', 'sans-serif';font-size: 18px;font-weight: bold;margin-left:70px">
                            Serviços disponíveis online
                        </span>
                    </td>
                </tr>
            </table>
            
        </div>
    </header>
    <img src="~/Images/Separator.png" />


    
    <div style="margin: 30px; width: auto">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
    <br />
    <div><img src="~/Images/Separator.png" /></div>
    <div style=" margin-left:30px; font-family: Arial, Helvetica, sans-serif;font-size: 12px;font-weight: bold;">&copy;2019 - Gestão Tributária Integrada (G.T.I.)</div>
    <div style=" margin-left:30px; font-family: Arial, Helvetica, sans-serif;font-size: 11px;font-weight: bold;color:darkgreen">
        Logado como @Functions.pUserFullName
        @if (Functions.pUserId>0) {
            @Html.ActionLink("Sair do sistema.", "Logout", "Home");
        }
    </div>



</body>
</html>