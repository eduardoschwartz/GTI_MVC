@model GTI_Mvc.ViewModels.ImovelDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Consulta de imóvel";
}




<style>
    .textBoxBlue {
        height: 25px;
        position: relative;
        border: 1px solid #0094ff;
        border-color: rgba(0, 0, 0, .14);
        background-color: white;
        font-size: 14px;
        box-shadow: 0 1px 1px 0 rgba(0,0,0,0.24),0 1px 6px 0 rgba(0,0,0,0.19);
    }

    .center {
        margin: auto;
    }

    .actionlink:hover {
        color: darkgreen;
    }

    .actionlink {
        color: darkslateblue;
        font-size: 14px;
    }

    .card-header {
        background-color: mistyrose;
        color: brown;
        font-size: 14px
    }

    .card {
        font-family: Arial, Helvetica, sans-serif;
    }

    .card-body {
        font-family: Arial, Helvetica, sans-serif;
    }

    .card-footer {
        background-color: whitesmoke;
        font-size: 14px
    }

    .btn-primary {
        background-color: steelblue;
    }

    .btn {
        font-size: 14px;
        border-radius: 4px;
    }

    .errorlabel {
        font-weight: normal;
        color: red;
        padding-left: 18px;
        font-size: 13px;
        font-family: Arial, Helvetica, sans-serif;
    }
</style>


<div class="center">

    @using (Html.BeginForm("CadImovelqryP", "Imovel", FormMethod.Post, new { @id = "MainForm", enctype = "multipart/form-data" })) {

        <div class="container" style="width:800px">
            <div class="card">
                <div class="card-header">Consulta de imóvel pelo proprietário</div>
                <div class="card-body">
                    <div>
                        <label style="font-weight:normal;font-size:13px;color:brown">Digite uma parte do nome do proprietário e clique em pesquisar</label><br />
                        @Html.TextBoxFor(m => m.NomeProprietario, new { @id = "nome", @style = "width:450px;height:25px" })<br /><br />
                        <button id="btnPesquisar" type="submit" class="btn btn-primary" name="action" value="btnPesquisar">Pesquisar</button>
                    </div>
                    <br />

                    @if (Model.Lista_Imovel.Count > 0) {
                        <table style="font-size:12px;width:730px">
                            <thead style="background-color:darkred;color:whitesmoke">
                                <tr style="height:10px">
                                    <td style="width:50px;text-align:center">Código</td>
                                    <td style="width:260px" ;text-align:left">Proprietário</td>
                                    <td style="width:370px;text-align:left">Endereço</td>
                                    <td style="width:50px;text-align:center"></td>
                                </tr>
                            </thead>
                            @foreach (GTI_Models.Models.ImovelStruct item in Model.Lista_Imovel) {
                                <tr style="height:20px;">
                                    <td style="width:50px;text-align:center;font-weight:normal">@Html.DisplayFor(modelItem => item.Codigo)</td>
                                    <td style="width:260px;text-align:left;font-weight:normal">@Html.DisplayFor(modelItem => item.Proprietario_Nome)</td>
                                    <td style="width:370px;text-align:left;font-weight:normal">@Html.DisplayFor(modelItem => item.NomeLogradouro)</td>
                                    <td style="width:50px;text-align:right">
                                        <a href="@Url.Action("Notificacao_terreno_print", "Imovel", new { c = item.Codigo })" title="Consultar"> <img src="@Url.Content("~/images/Consultar.gif")"></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    }

                </div>
                <label class="errorlabel" id="errorLabel">@ViewBag.Result</label>
                <div class="card-footer">
                    @Html.ActionLink("Pesquisar imóvel pelo código", "CadImovelMnu", "Imovel", null, new { @class = "actionlink" })<br />
                    @Html.ActionLink("Pesquisar imóvel pelo endereço", "CadImovelqryE", "Imovel", null, new { @class = "actionlink" })
                    @Html.ActionLink("Retornar ao menu principal", "Login_gti", "Home", null, new { @class = "actionlink" })
                </div>
            </div>
        </div>

    }
</div>

@section scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $("#MainForm").submit(function () {
                return ValidateForm();
            });
        });


        function ValidateForm() {
            ClearError();
            var _nome = document.getElementById('nome').value;

            if (_nome == "" || parseInt(_nome) == 0) {
                document.getElementById('errorLabel').innerHTML = "Digite o nome do proprietário";
                return false;
            }
        }

        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }


    </script>
}