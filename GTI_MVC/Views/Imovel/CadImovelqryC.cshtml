@model GTI_Mvc.ViewModels.ImovelDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Consulta de imóvel";
}




<style>
    .textBoxBlue {
        height: 25px;
        position: relative;
        border: 1px solid #0094ff;
        border-color: rgba(0, 0, 0, .14);
        background-color: white;
        font-size: 14px;
        box-shadow: 0 1px 1px 0 rgba(0,0,0,0.24),0 1px 6px 0 rgba(0,0,0,0.19);
    }

    .center {
        margin: auto;
    }

    .actionlink:hover {
        color: darkgreen;
    }

    .actionlink {
        color: darkslateblue;
        font-size:14px;
    }

    .card-header {
        background-color: mistyrose;
        color: brown;
        font-size: 14px
    }

    .card {
        font-family: Arial, Helvetica, sans-serif;
    }

    .card-body {
        font-family: Arial, Helvetica, sans-serif;
    }

    .card-footer {
        background-color: whitesmoke;
        font-size: 14px
    }

    .btn-primary {
        background-color: steelblue;
    }

    .btn {
        font-size: 14px;
        border-radius: 4px;
    }

    .errorlabel {
        font-weight: normal;
        color: red;
        padding-left: 18px;
        font-size: 13px;
        font-family: Arial, Helvetica, sans-serif;
    }
</style>


<div class="center">

    @using (Html.BeginForm("CadImovelqryC", "Imovel", FormMethod.Post, new { @id = "MainForm", enctype = "multipart/form-data" })) {

    <div class="container" style="width:400px">
        <div class="card">
            <div class="card-header">Consulta de imóvel pelo código</div>
            <div class="card-body">
                <div >
                    <label style="font-weight:normal;font-size:14px">Código do imóvel:</label>
                    @Html.TextBoxFor(m => m.Inscricao, new { @id = "codigo", @style = "width:100px;height:25px", @onKeyPress = "return formata(this, '§§§§§', event)" })
                    <label>&nbsp;&nbsp;</label>
                    <button id="btnCodigo" type="submit" class="btn btn-primary" name="action" value="btnCodigoOK">Consultar</button>
                </div>
          
            </div>
            <label class="errorlabel" id="errorLabel">@ViewBag.Result</label>
            <div class="card-footer">
                @Html.ActionLink("Pesquisar imóvel pelo proprietário", "CadImovelqryP", "Imovel", null, new { @class = "actionlink" })<br />
                @Html.ActionLink("Pesquisar imóvel pelo endereço", "CadImovelqryE", "Imovel", null, new { @class = "actionlink" })<br />
                @Html.ActionLink("Retornar ao menu principal", "Login_gti", "Home", null, new { @class = "actionlink" })
            </div>
        </div>
    </div>

    }
</div>

@section scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $("#MainForm").submit(function () {
                return ValidateForm();
            });
        });


        function ValidateForm() {
            ClearError();
            var _cod = document.getElementById('codigo').value;

            if (_cod == "" || parseInt(_cod) == 0) {
                document.getElementById('errorLabel').innerHTML = "Digite o código do imóvel";
                return false;
            }
        }

        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }


    </script>
}