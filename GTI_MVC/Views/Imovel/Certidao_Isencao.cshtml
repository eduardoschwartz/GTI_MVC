@model GTI_Mvc.ViewModels.CertidaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Certidão de Isenção";
}

<style>
    .textBoxBlue {
        height: 25px;
        position: relative;
        border: 1px solid #0094ff;
        border-color: rgba(0, 0, 0, .14);
        background-color: white;
        font-size: 14px;
        box-shadow: 0 1px 1px 0 rgba(0,0,0,0.24),0 1px 6px 0 rgba(0,0,0,0.19);
    }

    .center {
        margin: auto;
    }

    .actionlink:hover {
        color: darkgreen;
    }

    .actionlink {
        color: darkslateblue;
    }
    .card-header {
        background-color: mistyrose;
        color: brown;
        font-size: 14px
    }

    .card {
        font-family: Arial, Helvetica, sans-serif;
    }

    .card-footer {
        background-color: whitesmoke;
        font-size: 14px
    }

    .btn-primary {
        background-color: steelblue;
    }

    .btn {
        font-size: 14px;
        border-radius: 4px;
    }

    .errorlabel {
        font-weight: normal;
        color: red;
        padding-left: 13px;
        font-size: 13px;
        font-family: Arial, Helvetica, sans-serif;
    }
</style>
<div class="center container" style="width:400px">
    @using (Html.BeginForm("Certidao_Isencao", "Imovel", FormMethod.Post, new { @id = "MainForm" })) {
        <div class="card">
            <div class="card-header">Certidão de Isenção de IPTU</div>
            <div class="card-body">
                <table width="500px">
                    <tr style="height:40px">
                        <td style="width:150px">@Html.LabelFor(m => m.Inscricao, new { @style = "font-weight:normal" })</td>
                        <td style="width:300px">@Html.TextBoxFor(m => m.Inscricao, new { @id = "codigo", @class = "textBoxBlue", @style = "max-width:100px", @onKeyPress = "return formata(this, '§§§§§§', event)" })</td>
                    </tr>

                    <tr style="height:40px">
                        <td style="width:150px" valign="middle">
                            <img id="img-captcha" src="~/Empresa/GetCaptcha" />
                        </td>
                        <td style="width:150px" valign="middle">
                            @Html.TextBoxFor(m => m.CaptchaCode, new { @id = "captchaTxt", @class = "textBoxBlue", @maxlength = "6", @style = "max-width:100px;" })
                        </td>
                    </tr>
                </table>
                <br />
                <button type="submit" class="btn btn-primary"> Consultar</button>

            </div>
            <label class="errorlabel" id="errorLabel">@ViewBag.Result</label>
            <div class="card-footer">
                @Html.ActionLink("Retornar ao menu principal", "Login_gti", "Home", null, new { @class = "actionlink" })
            </div>

        </div>

    }

</div>

@section scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $("#MainForm").submit(function () {
                return ValidateForm();
            });
        });

        function ValidateForm() {
            ClearError();
            var _cod = document.getElementById('codigo').value;
            var _captcha = document.getElementById('captchaTxt').value;
            var _chave = document.getElementById('chave').value;

            if ((_cod == "" || parseInt(_cod) == 0) && _chave == "") {
                document.getElementById('errorLabel').innerHTML = "Digite a inscrição municipal ou a chave de autenticação da certidão";
                return false;
            }

            if (_captcha == "" && _chave == "") {
                document.getElementById('errorLabel').innerHTML = "Digite o código de validação!";
                return false;
            } else {
                if (_captcha.length < 6) {
                    document.getElementById('errorLabel').innerHTML = "Código de validação inválido!";
                    return false;
                } else
                    return true;
            }

            if (_chave.length > 8) {
                var _sufixo = _chave.substring(_chave.length - 3, _chave.length);
                if (_sufixo != "-CI") {
                    document.getElementById('errorLabel').innerHTML = "Chave de autenticação inválida!";
                    return false;
                }
            } else {
                if (_chave.length != "") {
                    document.getElementById('errorLabel').innerHTML = "Chave de autenticação inválida!";
                    return false;
                }
            }
            return true;
        }

        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }

    </script>
}
