@model GTI_Mvc.ViewModels.CertidaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Emissão de DAM";
}

<style>
    .textBoxBlue {
        height: 25px;
        position: relative;
        border: 1px solid #0094ff;
        border-color: rgba(0, 0, 0, .14);
        background-color: white;
        font-size: 14px;
        box-shadow: 0 1px 1px 0 rgba(0,0,0,0.24),0 1px 6px 0 rgba(0,0,0,0.19);
    }
    .center {
        margin: auto;
        width: 440px;
        border: 1px solid rgba(0,0,0,0.24);
        padding: 20px;
        box-shadow: 0 .1em 0.5em #000;
        border-radius: 13px;
    }
    .actionlink:hover {
        color: darkgreen;
    }

    .actionlink {
        color: darkslateblue;
    }
</style>

<div class="center">
    <label style="color: brown;font-size: 16px;font-style: italic">Consulta e atualização de débitos vencidos</label>
    <br />
    @using (Html.BeginForm("Dama", "Tributario", FormMethod.Post, new { @id = "MainForm" })) {

        <table>
            <tr>
                <td style="padding-top:7px; width:170px"><label style="font-weight:normal">Data de pagamento:&nbsp;</label></td>
                <td style="width:200px">@Html.TextBoxFor(m => m.DataVencimento, new { @id = "vencto", @class = "textBoxBlue", @style = "max-width:100px", @onKeyPress = "return formata(this, '§§/§§/§§§§', event)" })</td>
            </tr>

        </table>
        <span style="color:red;font-weight:bold">Digite a data que deseja efetuar o pagamento do boleto.</span>
        <br />
        <br />
        <img src="~/Images/AvisoRefis.png" style="text-align: center" />

        <br />
        <br />
        <button type="submit" class="btn btn-primary"> Consultar</button>
        <br />

        <br />
        <div class="form-group row">
            <label style="font-weight:normal;color:red" id="errorLabel">@ViewBag.Result</label>
        </div>


    }

    @Html.ActionLink("Retornar ao menu principal", "Login_gti", "Home", null, new { @class = "actionlink" })
</div>


@section scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $("#MainForm").submit(function () {
                return ValidateForm();
            });
        });

        function ValidateForm() {
            ClearError();
            var _data = document.getElementById('vencto').value;

            if (_data.length < 10) {
                document.getElementById('errorLabel').innerHTML = "Data de vencimento inválida";
                return false;
            }

            return true;
        }

        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }

    </script>
}
