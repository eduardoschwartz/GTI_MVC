@model GTI_Mvc.ViewModels.CertidaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Emissão de DAM";
}

<span style="color:brown;font-size:14px">
    Consulta e atualização de débitos não pagos<br />
    Emissão de Documento de Arrecadação Municipal (D.A.M.)<br />
</span>

<form asp-controller="Tributario" enctype="multipart/form-data" method="post" onsubmit="return ValidateForm()" asp-action="Damb" class="mt-3">
    @Html.HiddenFor(m => m.DataVencimento)

    <table style="font-size:14px">
        <tr>
            <td style="vertical-align:baseline"><label>Data de Vencimento:</label></td>
            <td style="vertical-align:baseline"><label asp-for="DataVencimento"><span style="font-weight:bold">@Model.DataVencimento</span></label></td>
        </tr>
        <tr>
            <td style="vertical-align:baseline"><label>Inscrição Municipal:</label></td>
            <td style="vertical-align:baseline"><input asp-for="Inscricao" id="codigo" class="form-control" style="max-width:100px;max-height:25px;overflow:auto;" onKeyPress="return formata(this, '§§§§§§', event)" onchange="ClearError()"></td>
        </tr>
    </table>
    <div class="form-group row align-items-lg-baseline" style="margin-left:1px;font-size:14px">
        <label>Cpf:</label>&nbsp; <input type="radio" required asp-for="CpfCnpjLabel" id="cpfCheck" value="cpf" name="doc" checked="checked" onclick="radioCheck()" />
        &nbsp;<label>Cnpj:</label>&nbsp;  <input type="radio" required asp-for="CpfCnpjLabel" id="cnpjCheck" value="cnpj" name="doc" onclick="radioCheck()" />
        &nbsp;<input asp-for="CpfValue" id="cpfTxt" class="form-control" style="max-width:200px;max-height:25px;" onKeyPress="return formata(this, '§§§.§§§.§§§-§§', event)" onchange="ClearError()" placeholder="Digite o nº do CPF">
        &nbsp;<input asp-for="CnpjValue" id="cnpjTxt" class="form-control" style="max-width:200px;max-height:25px;display:none" onKeyPress="return formata(this, '§§.§§§.§§§/§§§§-§§', event)" onchange="ClearError()" placeholder="Digite o nº do CNPJ">
    </div>

    <div class="form-group row align-items-lg-baseline" style="margin-left:1px">
        <div>
            <div class="input-group">
                <img id="img-captcha" src="~/Empresa/get-captcha-image" title="Clique para atualizar" />
                &nbsp;<input type="text" class="form-control" asp-for="CaptchaCode" maxlength="4" id="captchaTxt" style="width:100px" onchange="ClearError()" />
                &nbsp;<button type="submit" title="Imprimir a certidão" class="green_button" formmethod="post"> Consultar</button>
            </div>
        </div>
    </div>


</form>

<label class="text-danger" id="errorLabel">@ViewBag.Result</label>

<br />
@Html.ActionLink("Retornar ao menu principal", "Index", "Home")

@section scripts{

    <script type="text/javascript">
        function ValidateForm() {
            var _cod = document.getElementById('codigo').value;
            var _cpf = document.getElementById('cpfTxt').value;
            var _cnpj = document.getElementById('cnpjTxt').value;
            var _captcha = document.getElementById('captchaTxt').value;

            if ((_cod == "" || parseInt(_cod) == 0)) {
                document.getElementById('errorLabel').innerHTML = "Digite a inscrição municipal!";
                return false;
            }
            else {
                if ((_cpf == "" && _cnpj == "")) {
                    document.getElementById('errorLabel').innerHTML = "Digite o Cpf ou o CNPJ!";
                    return false;
                } else {
                    if (_captcha == "") {
                        document.getElementById('errorLabel').innerHTML = "Digite o código de validação!";
                        return false;
                    } else {
                        return true;
                    }
                }
            }
        }

        function radioCheck() {
            document.getElementById('cnpjTxt').value = "";
            document.getElementById('cpfTxt').value = "";
            if (document.getElementById('cpfCheck').checked) {
                document.getElementById('cpfTxt').style.display = 'block';
            }
            else {
                document.getElementById('cpfTxt').style.display = 'none';
            }
            if (document.getElementById('cnpjCheck').checked) {
                document.getElementById('cnpjTxt').style.display = 'block';
            }
            else {
                document.getElementById('cnpjTxt').style.display = 'none';
            }
        }

        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }

        $("#img-captcha").click(function () {
            resetCaptchaImage();
        });

        function resetCaptchaImage() {
            d = new Date();
            /**/
            $("#img-captcha").attr("src", "/Empresa/get-captcha-image?" + d.getTime());
            /**/
        }

    </script>}
