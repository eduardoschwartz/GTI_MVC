@model GTI_Mvc.ViewModels.ProcessoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Consulta de Processo";
}

<style>
    .textBoxBlue {
        height: 25px;
        position: relative;
        border: 1px solid #0094ff;
        border-color: rgba(0, 0, 0, .14);
        background-color: white;
        font-size: 14px;
        box-shadow: 0 1px 1px 0 rgba(0,0,0,0.24),0 1px 6px 0 rgba(0,0,0,0.19);
    }

    .center {
        margin: auto;
    }

    .actionlink:hover {
        color: darkgreen;
    }

    .actionlink {
        color: darkslateblue;
    }
</style>


<div class="center container" style="width:400px">
    @using (Html.BeginForm("Consulta_Processo", "Protocolo", FormMethod.Post, new { @id = "MainForm" })) {
        <div class="panel panel-danger">
            <div class="panel-heading">Consulta de Processo</div>
            <div class="panel-body">
                <table>
                    <tr style="height:40px">
                        <td style="width:150px"><label style="font-weight:normal">Nº do Processo: </label></td>
                        <td style="width:300px">@Html.TextBoxFor(m => m.Numero_Ano, new { @id = "numprocesso", @class = "textBoxBlue", @style = "max-width:150px" })</td>
                    </tr>

                    <tr style="height:40px">
                        <td style="width:150px" valign="middle">
                            <img id="img-captcha" src="~/Empresa/GetCaptcha" />
                        </td>
                        <td style="width:150px" valign="middle">
                            @Html.TextBoxFor(m => m.CaptchaCode, new { @id = "captchaTxt", @class = "textBoxBlue", @maxlength = "6", @style = "max-width:100px;" })
                        </td>
                    </tr>
                </table>

                <br />
                <button type="submit" class="btn btn-primary"> Consultar</button>
            </div>
            <label style="font-weight:normal;color:red;padding-left:13px" id="errorLabel">@ViewBag.Result</label>
            <div class="panel-footer">
                @Html.ActionLink("Retornar ao menu principal", "Login_gti", "Home", null, new { @class = "actionlink" })
            </div>
        </div>
    }
</div>

@section scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            $("#MainForm").submit(function () {
                return ValidateForm();
            });
        });

        function ValidateForm() {
            ClearError();
            var _numero = document.getElementById('numprocesso').value.trim();
            var _captcha = document.getElementById('captchaTxt').value;

            var _error = Valida_Numero_Processo(_numero);
            if (_error != "") {
                document.getElementById('errorLabel').innerHTML = _error;
                return false;
            }

            if (_captcha == "") {
                document.getElementById('errorLabel').innerHTML = "Digite o código de validação!";
                return false;
            } else {
                return true;
            }

            return true;
        }

        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }

    </script>
}




