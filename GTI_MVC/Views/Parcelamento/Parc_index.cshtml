
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Menu de Opções";
}
<link href="~/css/gti.css" rel="stylesheet" />
<style>
    .center {
        margin: auto;
    }

    .actionlink:hover {
        color: darkgreen;
    }

    .actionlink {
        color: darkslateblue;
    }

    .card-header {
        background-color: mistyrose;
        color: brown;
        font-size: 14px
    }

    .card {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 14px;
    }

    .card-footer {
        background-color: whitesmoke;
        font-size: 14px
    }

    .btn-primary {
        background-color: steelblue;
    }

    .btn {
        font-size: 14px;
        border-radius: 4px;
    }

    .errorlabel {
        font-weight: normal;
        color: red;
        padding-left: 13px;
        font-size: 13px;
        font-family: Arial, Helvetica, sans-serif;
    }
</style>
<br />

<div class="center">
    <div class="container" style="width:450px">
        <div class="card">
            <div class="card-header">Parcelamento de débitos</div>
            <div class="card-body">
                @Html.ActionLink("Efetuar parcelamento", "parc_req", "Parcelamento", null, new { @class = "actionlink" })<br />
                @Html.ActionLink("Consultar parcelamentos efetuados", "Parc_query", "Parcelamento", null, new { @class = "actionlink" })<br />
                @Html.ActionLink("Relatório de parcelamentos efetuados", "Parc_rel", "Parcelamento", null, new { @class = "actionlink" })<br />
                <a href="~/Files/Parcelamento Manual do Usuario.pdf" class="actionlink">Download do manual do usuário</a><br />
                @*@if(ViewBag.DataBase!="") {
            <br />
            <h4 style="color:red">@ViewBag.DataBase</h4>
        }*@


            </div>
            <div class="card-footer">
                @Html.ActionLink("Retornar ao menu de opções", "sysMenu", "Home", null, new { @class = "actionlink" })<br />
                @Html.ActionLink("Retornar ao menu principal", "Login_gti", "Home", null, new { @class = "actionlink" })
            </div>
        </div>
    </div>
</div>
