@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Menu de Opções";
}
<link href="~/Content/gti.css" rel="stylesheet" />

<style>
    .center {
        margin: auto;
        width: 900px;
        border: 1px solid rgba(0,0,0,0.24);
        padding: 20px;
        box-shadow: 0 .3em 1em #000;
        border-radius: 13px;
    }
    .actionlink:hover{color:darkgreen;}
    .actionlink{color:darkslateblue;}
</style>

<br />
<br />
<div class="center">
    <div style="width: 100%; overflow: hidden;">
        <div style="width: 400px; float: left;">
            <span style="color:brown;font-weight:bold;font-style:italic">Para seu imóvel</span><br />
            @Html.ActionLink("Emissão de 2ª via do carnê de IPTU (2020)", "Carne_Iptu", "Imovel",null,new { @class="actionlink"})<br />
            @Html.ActionLink("Dados cadastrais de um imóvel", "Dados_Imovel", "Imovel",null, new { @class = "actionlink" })<br />
            @Html.ActionLink("Certidão de endereço atualizado", "Certidao_Endereco", "Imovel",null, new { @class = "actionlink" })<br />
            @Html.ActionLink("Certidão de valor venal", "Certidao_Valor_Venal", "Imovel",null, new { @class = "actionlink" })<br />
            @Html.ActionLink("Certidão de isenção de IPTU", "Certidao_Isencao", "Imovel",null, new { @class = "actionlink" })<br />
        </div>

        <div style="margin-left: 420px;">
            <span style="color:brown;font-weight:bold;font-style:italic">Para sua empresa</span><br />
            @Html.ActionLink("Dados cadastrais de uma empresa", "Details", "Empresa", null, new { @class = "actionlink" })<br />
            <a href="~/Files/DECA2018.pdf" class="actionlink">Download da declaração cadastral (DECA)</a><br />
            @Html.ActionLink("Renovação de alvará de funcionamento", "Alvara_Funcionamento", "Empresa", null, new { @class = "actionlink" })<br />
            @Html.ActionLink("Comprovante de inscrição e situação cadastral", "Certidao_Inscricao", "Empresa", null, new { @class = "actionlink" })<br />
            @Html.ActionLink("Situação dos débitos ref. a ISS Fixo, Taxa de Licença e Vig. Sanitária", "Certidao_Pagamento", "Empresa", null, new { @class = "actionlink" })
        </div>
    </div>


    <br />
    <br />
    <br />
    <div style="width: 100%; overflow: hidden;">
        <div style="width: 400px; float: left;">
            <span style="color:brown;font-weight:bold;font-style:italic">Operações financeiras</span><br />
            @Html.ActionLink("Consulta e atualização de boletos para pagamento", "Dama", "Tributario", null, new { @class = "actionlink" })<br />
            @Html.ActionLink("Certidão de débito (Código do imóvel ou inscrição municipal)", "Certidao_Debito_Codigo", "Tributario", null, new { @class = "actionlink" })<br />
            @Html.ActionLink("Certidão de débito (CPF/CNPJ)", "Certidao_Debito_Doc", "Tributario", null, new { @class = "actionlink" })<br />
            @Html.ActionLink("Impressão de comprovante de pagamento", "Comprovante_pagamento", "Tributario", null, new { @class = "actionlink" })<br />
            @Html.ActionLink("Emissão de carnê de parcelamento (parcelas de 2020)", "SegundaVia_Parcelamento", "Tributario", null, new { @class = "actionlink" })<br />
        </div>

        <div style="margin-left: 420px;">
            <span style="color:brown;font-weight:bold;font-style:italic">Outras opções</span><br />
            @Html.ActionLink("Consulta de Processos", "Consulta_Processo", "Protocolo", null, new { @class = "actionlink" })<br />
            @Html.ActionLink("Acesso ao Sistema", "Login", "Home", null, new { @class = "actionlink" })<br />
            @*@Html.ActionLink("Cadastro de imóvel", "CadImovel", "Imovel",new { Codigo=1},null)<br />*@
            @Html.ActionLink("Emissão de Guia", "Guia", "Tributario", null, new { @class = "actionlink" })<br />
        </div>
    </div>
</div>
