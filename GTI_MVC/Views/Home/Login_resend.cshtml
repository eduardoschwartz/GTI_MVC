@model GTI_Mvc.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reenviar confirmação";
}
<style>
    .textBoxBlue {
        height: 25px;
        position: relative;
        border: 1px solid #0094ff;
        border-color: rgba(0, 0, 0, .14);
        background-color: white;
        font-size: 14px;
        box-shadow: 0 1px 1px 0 rgba(0,0,0,0.24),0 1px 6px 0 rgba(0,0,0,0.19);
    }

    .center {
        margin: auto;
        width: 520px;
        border: 1px solid rgba(0,0,0,0.24);
        padding: 20px;
        box-shadow: 0 .1em 0.5em #000;
        border-radius: 13px;
    }

    .actionlink:hover {
        color: darkgreen;
    }

    .actionlink {
        color: darkslateblue;
    }
</style>

<div class="center">
    <br />
    <label style="color: brown;font-size: 16px;font-style: italic">Reenviar email de confirmação da conta</label>
    <br />

    <br />
    @using (Html.BeginForm("Login_resend", "Home", FormMethod.Post, new { @id = "MainForm" })) {
        <table width="500px">
            <tr style="height:40px">
                <td><label style="font-weight:normal">Endereço de Email:</label></td>
                <td>@Html.TextBoxFor(m => m.Email, new { @id = "email", @class = "textBoxBlue", @style = "max-width:400px;width:300px" })</td>
            </tr>

            <tr style="height:40px">
                <td valign="middle">
                    <img id="img-captcha" src="~/Empresa/GetCaptcha" />
                </td>
                <td valign="middle">
                    @Html.TextBoxFor(m => m.CaptchaCode, new { @id = "captchaTxt", @class = "textBoxBlue", @maxlength = "6", @style = "max-width:100px;" })
                </td>
            </tr>
        </table>
        <br />
        <button type="submit" title="Finalizar o cadastro" class="btn btn-primary"> Enviar</button>

        <br />
        <br />
        <div class="form-group row">
            <label style="font-weight:normal;color:red;padding-left:10px" id="errorLabel">@ViewBag.Result</label>
        </div>
    }

    @Html.ActionLink("Retornar ao menu principal", "Login_gti", "Home", null, new { @class = "actionlink" })
</div>


@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#MainForm").submit(function () {
                return ValidateForm();
            });
        });

        function ValidateForm() {
            ClearError();
            var _captcha = document.getElementById('captchaTxt').value;
            var _email = document.getElementById('email').value;

            var mailformat = /^[a-z0-9\.\_%+-]+@@[a-z0-9\.\-]+\.[a-z]{2,4}$/i;
            if (!mailformat.test(_email)) {
                document.getElementById('errorLabel').innerHTML = "Endereço de email inválido";
                document.getElementById('email').focus();
                return false;
            }

            if (_captcha.length < 6) {
                document.getElementById('errorLabel').innerHTML = "Código de validação inválido";
                document.getElementById('captchaTxt').focus();
                return false;
            }

            return true;
        }


        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }


    </script>
}

