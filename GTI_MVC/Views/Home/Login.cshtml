@model GTI_Mvc.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login do Sistema";
}
<style>
    .textBoxBlue {
        height: 25px;
        position: relative;
        border: 1px solid #0094ff;
        border-color: rgba(0, 0, 0, .14);
        background-color: white;
        font-size: 14px;
        box-shadow: 0 1px 1px 0 rgba(0,0,0,0.24),0 1px 6px 0 rgba(0,0,0,0.19);
    }
</style>

<label style="color: brown;font-size: 16px;font-style: italic;font-weight: normal;text-decoration:underline" ;>Acesso ao Sistema</label>
<br />
<br />


@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @id = "MainForm" })) {

<table width="500px">
    <tr style="height:40px">
        <td style="width:80px">@Html.LabelFor(m => m.Usuario, new { @style = "font-weight:normal" })</td>
        <td style="width:300px">@Html.TextBoxFor(m => m.Usuario, new { @id = "codigo", @class = "textBoxBlue", @style = "max-width:200px" })</td>
    </tr>
    <tr style="height:40px">
        <td style="width:80px">@Html.LabelFor(m => m.Senha, new { @style = "font-weight:normal" })</td>
        <td style="width:300px">@Html.TextBoxFor(m => m.Senha, new {@type="password", @id = "codigo", @class = "textBoxBlue", @style = "max-width:200px" })</td>
    </tr>
</table>

    <br />
    <div class="col-sm-10">
        <button type="submit" title="Acessar o sistema" class="green_button" > Entrar</button>
    </div>
    <br />
    <br />
    <br />
    

    <br />
    <div class="form-group row">
        <label style="font-weight:normal;color:red" id="errorLabel">@ViewBag.Result</label>
    </div>
    <br />

}



<br />
<div class="form-group row" style="margin-left:-10px">
    &nbsp;&nbsp;<label class="text-danger" id="errorLabel">@ViewBag.Result</label>
</div>


@Html.ActionLink("Retornar ao menu principal", "Index", "Home")


@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#MainForm").submit(function () {
                return ValidateForm();
            });
        });

        function ValidateForm() {
            ClearError();
            var _cod = document.getElementById('codigo').value;
            var _captcha = document.getElementById('captchaTxt').value;
            var _chave = document.getElementById('chave').value;

            if ((_cod == "" || parseInt(_cod) == 0) && _chave == "") {
                document.getElementById('errorLabel').innerHTML = "Digite a inscrição municipal ou a chave de autenticação da certidão";
                return false;
            }

            return true;
        }

        function ClearError() {
            document.getElementById('errorLabel').innerHTML = "";
        }


    </script>
}

