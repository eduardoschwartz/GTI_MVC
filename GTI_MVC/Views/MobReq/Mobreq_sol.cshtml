@model GTI_Mvc.ViewModels.MobReqViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Requerimento";
}

<style>

    .center {
        margin: auto;
        width: 800px;
    }

    .actionlink:hover {
        color: darkgreen;
    }

    .actionlink {
        color: darkslateblue;
    }

    .topics tr:hover {
        background-color: #f5f5f5;
    }

    .topics tr {
        height: 20px;
        font-size: 14px;
    }

    .modal-ku {
        width: 450px;
        margin: 200px, auto;
    }

    .card-header {
        background-color: mistyrose;
        color: brown;
        font-size: 14px
    }

    .card {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 14px;
    }

    .card-footer {
        background-color: whitesmoke;
        font-size: 14px
    }

    .btn-primary {
        background-color: steelblue;
    }

    .btn {
        font-size: 14px;
        border-radius: 4px;
    }

    .ui-dialog-titlebar-close {
        visibility: hidden;
    }


</style>

@{var res = @ViewBag.Result;}
<div class="center">
    @using(Html.BeginForm("Mobreq_sol","MobReq",FormMethod.Post,new { @id = "MainForm",enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()
        <div class="container" style="width:700px">
            <div class="card">
                <div class="card-header">Requerimentos</div>
                <div class="card-body">
                    <table width="440px">
                        <tr style="height:30px">
                            <td style="width:160px;font-size:14px">Tipo de Requerimento:</td>
                            <td style="width:280px">
                                @Html.HiddenFor(m => m.Evento_Codigo)
                                @Html.HiddenFor(m => m.Evento_Nome)
                                <span style="color:brown;font-size:14px">@Model.Evento_Nome</span>
                                @*@Html.DropDownListFor(m => m.Evento_Codigo,ViewBag.ListaEvento as SelectList,null,new { @id = "EventoDropDown",@style = "font-size:14px" })*@
                            </td>
                        </tr>
                        <tr style="height:30px">
                            <td style="width:160px;font-size:14px">Cpf/Cnpj:</td>
                            <td style="width:280px">
                                @Html.TextBoxFor(m => m.CpfValue,new { @id = "cpfcnpj",@name = "cpfcnpj",@style = "Width:160px;font-size:14px" })
                            </td>
                        </tr>
                    </table>
                    <br />


                    <button type="submit" class="btn btn-primary">
                        <img src="~/Images/Consultar.gif" /> &nbsp; Consultar
                    </button>


                </div>
                <div class="card-footer">
                    @Html.ActionLink("Retornar ao menu de opções","mobreq_menu","MobReq",null,new { @class = "actionlink" })<br />
                </div>
            </div>


        </div>

    }


</div>
<div id="msgBox1" title="Atenção" style='display: none;'>
    <br />
    <label id="lblMsg"></label>
</div>
<div id="msgBoxBag" title="Atenção" style='display: none;'>
    <br />
    <p>@ViewBag.Result</p>
</div>


@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#MainForm").submit(function () {
                return ValidateForm();
            });

            //Máscara Cpf/Cnpj
            $("#cpfcnpj").keydown(function () {
                try {
                    $("#cpfcnpj").unmask();
                } catch (e) { }
                var tamanho = $("#cpfcnpj").val().length;
                if (tamanho < 11) {
                    $("#cpfcnpj").mask("999.999.999-99");
                } else {
                    $("#cpfcnpj").mask("99.999.999/9999-99");
                }
                var elem = this;
                setTimeout(function () {
                    elem.selectionStart = elem.selectionEnd = 10000;
                }, 0);
                var currentValue = $(this).val();
                $(this).val('');
                $(this).val(currentValue);
            });

            $('#msgBox1').dialog({
                autoOpen: false,
                resizable: false,
                draggable: false,
                position: { my: 'top', at: 'top+300' },
                height: "auto",
                width: 340,
                modal: true,
                dialogClass: "foo",
                buttons: {
                    "OK": function () {
                        $(this).dialog("close");
                    }
                }
            });

            $('#msgBoxBag').dialog({
                autoOpen: false,
                resizable: false,
                draggable: false,
                position: { my: 'top', at: 'top+300' },
                height: "auto",
                width: 340,
                modal: true,
                dialogClass: "foo",
                buttons: {
                    "OK": function () {
                        $(this).dialog("close");
                    }
                }
            });

            $(".ui-dialog").css({
                zIndex: '1060'
            });
            $(".foo .ui-dialog-title").css("font-size", "13px");
            $(".foo .ui-widget-content").css("font-size", "13px");

            var _res = '@res';
            if (_res != "") {
                $('#msgBoxBag').dialog('open');
                return false;
            } else {
                return true;
            }

        });

        function ValidateForm() {
            

            //*** Valida CpfCnpj ***
            var _cpf = document.getElementById('cpfcnpj').value;
            if (_cpf.length == 14) {
                if (!valida_Cpf(_cpf)) {
                    document.getElementById('lblMsg').innerHTML = "Nº de Cpf/Cnpj inválido!";
                    $('#msgBox1').dialog('open');
                    return false;
                }
            } else {
                if (_cpf.length == 18) {
                    if (!valida_Cnpj(_cpf)) {
                        document.getElementById('lblMsg').innerHTML = "Nº de Cpf/Cnpj inválido!";
                        $('#msgBox1').dialog('open');
                        return false;
                    }
                } else {
                    document.getElementById('lblMsg').innerHTML = "Nº de Cpf/Cnpj inválido!";
                    $('#msgBox1').dialog('open');
                    return false;
                }
            }
            return true;
        }


       


    </script>
}
